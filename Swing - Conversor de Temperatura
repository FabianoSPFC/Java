    private void Temp_CelMouseMoved(java.awt.event.MouseEvent evt) {                                    

    }                                   

    private void Temp_CelStateChanged(javax.swing.event.ChangeEvent evt) {                                      
       DecimalFormat df = new DecimalFormat("###,##0.00");
       Label_Cel.setText(Integer.toString(Temp_Cel.getValue()));
       Label_Far.setText(Integer.toString(Temp_Cel.getValue()));
       Label_Kel.setText(Integer.toString(Temp_Cel.getValue()));
       double Cel = Double.parseDouble(Double.toString(Temp_Cel.getValue()));
       double Far = Cel * 1.8 + 32;
       Label_Far.setText(""+df.format(Far));
       //Temp_Cel.setValue((Label_Cel.getText()));
       double Kel = Cel + 273;
       Label_Kel.setText(""+df.format(Kel));
    }                                     

    private void Temp_FarStateChanged(javax.swing.event.ChangeEvent evt) {                                      
        DecimalFormat df = new DecimalFormat("###,##0.00");
        Label_Far.setText(Integer.toString(Temp_Far.getValue()));
        Label_Cel.setText(Integer.toString(Temp_Far.getValue()));
        Label_Kel.setText(Integer.toString(Temp_Far.getValue()));
        double Fare = Double.parseDouble(Double.toString(Temp_Far.getValue()));
        double Celc = (Fare - 32)/1.8;
        Label_Cel.setText(""+df.format(Celc));
        double Kelv = ((5*Fare + 2297)/9);
        Label_Kel.setText(""+df.format(Kelv));
    }                                     

    private void Temp_KelStateChanged(javax.swing.event.ChangeEvent evt) {                                      
        DecimalFormat df = new DecimalFormat("###,##0.00");
        Label_Kel.setText(Integer.toString(Temp_Kel.getValue()));
        Label_Cel.setText(Integer.toString(Temp_Kel.getValue()));
        Label_Far.setText(Integer.toString(Temp_Kel.getValue()));
        double Kelvin = Double.parseDouble(Double.toString(Temp_Kel.getValue()));
        double Celsius = (Kelvin - 273);
        Label_Cel.setText(""+df.format(Celsius));
        double Farenheit = ((9*Kelvin - 2297)/5);
        Label_Far.setText(""+df.format(Farenheit));
    }                                     

